<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_country_flag"/>

            <TextView
                android:id="@+id/tv_country_of_origin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="5dp"
                android:paddingLeft="2dp"
                android:layout_toRightOf="@id/iv_country_flag"/>

            <TextView
                android:id="@+id/tv_callsign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="5dp"
                android:layout_toRightOf="@id/tv_country_of_origin"/>


            <TextView
                android:id="@+id/tv_icao24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@id/tv_callsign"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>